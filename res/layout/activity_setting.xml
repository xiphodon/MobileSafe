<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:siv="http://schemas.android.com/apk/res/com.gc.p01_mobilesafe"
    xmlns:siav="http://schemas.android.com/apk/res/com.gc.p01_mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />
     
     <com.gc.p01_mobilesafe.view.SettingItemView
         android:id="@+id/siv_update"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         siv:title="自动更新忽略设置"
         siv:desc_on="自动更新已忽略"
         siv:desc_off="自动更新已开启"/>
     
     <com.gc.p01_mobilesafe.view.SettingItemView
         android:id="@+id/siv_addressShow"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         siv:title="电话归属地显示设置"
         siv:desc_on="归属地号码显示已开始"
         siv:desc_off="归属地号码显示已关闭"/>
     
     <com.gc.p01_mobilesafe.view.SettingItemArrowView
         android:id="@+id/siav_addressStyle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         siav:title="归属地悬浮框风格"/>
     
     <com.gc.p01_mobilesafe.view.SettingItemArrowView
         android:id="@+id/siav_addressLocation"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         siav:title="归属地悬浮框位置"/>

     <com.gc.p01_mobilesafe.view.SettingItemView
         android:id="@+id/siv_callsafe"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         siv:title="黑名单拦截设置"
         siv:desc_on="黑名单拦截已开启"
         siv:desc_off="黑名单拦截已关闭"/>
</LinearLayout>
